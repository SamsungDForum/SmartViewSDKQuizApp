<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samsung.msf2.quizapp.SelectPlayCategoryFragment"
    android:background="@drawable/back1">

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlv_Middle">

    <Button
        android:id="@+id/btn_Sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                 Sports                 "
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/some_row_background"
        android:textColor="#ffa500"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_Science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                 Science                "
        android:background="@drawable/some_row_background"
        android:layout_centerHorizontal="true"
        android:textColor="#ffa500"
        android:layout_below="@+id/btn_Sports"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                 History                 "
        android:background="@drawable/some_row_background"
        android:textColor="#ffa500"
        android:layout_below="@+id/btn_Science"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        />

    </RelativeLayout>


</RelativeLayout>
