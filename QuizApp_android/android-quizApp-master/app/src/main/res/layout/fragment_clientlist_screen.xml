<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".ClientListFragment">

    <RelativeLayout
        android:id="@+id/rlv_Header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/tvHostName"
            android:text="Connect to Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btnRefreshClientId"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textColor="@android:color/white"
            android:text="Refresh"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            />

    </RelativeLayout>


    <ListView
        android:id="@+id/listViewClient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/rlv_Header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@android:color/white"
        android:dividerHeight="1dp"/>

</RelativeLayout>
